include LICENSE.txt
include README.md

include setupbase.py
include pytest.ini
include .coverage.rc

include tsconfig.json
include package.json
include webpack.config.js
include pgljupyter/labextension/*.tgz

# Documentation
#graft docs
exclude docs/\#*
prune docs/build
prune docs/gh-pages
prune docs/dist

# Examples
#graft examples

# Tests
prune tests

# Javascript files
graft pgljupyter/nbextension
graft src
prune src/pgljs/node_modules
prune src/pgljs/plantgl
prune src/pgljs/debug
prune src/pgljs/build
prune src/pgljs/dist
prune **/node_modules
prune *.js.map
prune examples
prune coverage
prune lib

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
