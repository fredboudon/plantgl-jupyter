{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "L-Py",
    "type": "object",
    "required": ["schema"],
    "properties": {
        "schema": {
            "enum": ["lpy"]
        },
        "authors": {
            "type": "string"
        },
        "institutes": {
            "type": "string"
        },
        "copyright": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "references": {
            "type": "string"
        },
        "animation_timestep": {
            "type": "number",
            "exclusiveMinimum": 0
        },
        "scalars": {
            "type": "object",
            "patternProperties": {
                "^[^\\d\\W]\\w*\\Z": {
                    "$ref": "scalar.json"
                }
            },
            "additionalProperties": false
        },
        "materials": {
            "type": "object",
            "patternProperties": {
                "^[^\\d\\W]\\w*\\Z": {
                    "$ref": "material.json"
                }
            },
            "additionalProperties": false
        },
        "functions": {
            "type": "object",
            "patternProperties": {
                "^[^\\d\\W]\\w*\\Z": {
                    "$ref": "function.json"
                }
            },
            "additionalProperties": false
        },
        "curves": {
            "type": "object",
            "patternProperties": {
                "^[^\\d\\W]\\w*\\Z": {
                    "$ref": "curve.json"
                }
            },
            "additionalProperties": false
        }
    }
}
