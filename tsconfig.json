{
  "compilerOptions": {
    "strictNullChecks": false,
    "noImplicitAny": false,
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": [
    "src/widgets/**/*.ts",
    "src/*.ts"
  ]
}
