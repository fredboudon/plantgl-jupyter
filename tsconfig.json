{
  "compilerOptions": {
    "strictNullChecks": false,
    "noImplicitAny": false,
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
  },
  "include": [
    "src/widgets/**/*.ts",
    "src/*.ts"
  ]
}
